{
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/rust:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "settings": { 
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "editor.formatOnSave": true
            },
            "extensions": [
                "rust-lang.rust-analyzer"
            ]
        }
    },
    "onCreateCommand": "cargo install --path ."
}
